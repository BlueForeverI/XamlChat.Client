<Window 
        xmlns:Views="clr-namespace:Xaml.Chat.Client.Views"
        x:Class="Xaml.Chat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModels="clr-namespace:Xaml.Chat.Client.ViewModels" 
        Title="XAML Chat" Height="350" Width="525">
    <Window.DataContext>
        <ViewModels:AppViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate            
            DataType="{x:Type ViewModels:LoginRegisterFormViewModel}">
            <Views:LoginRegisterFormView/>
        </DataTemplate>
        <DataTemplate            
            DataType="{x:Type ViewModels:ConversationViewModel}">
            <Views:ConversationView/>
        </DataTemplate>
        <DataTemplate 
            DataType="{x:Type ViewModels:GeneralViewModel}">
            <Views:GeneralView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding Path=CurrentViewModel}" />
    </Grid>
</Window>
